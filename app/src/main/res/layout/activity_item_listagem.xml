<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <ImageView
                    android:id="@+id/btnPerfil"
                    android:layout_width="117dp"
                    android:layout_height="121dp"
                    android:background="@drawable/button_background_foto_listagem"
                    android:stateListAnimator="@null"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="1dp"/>

                <ImageView
                    android:id="@+id/imvEspecieList"
                    android:background="@drawable/imagem_listagem_cat"
                    android:scaleType = "centerCrop"
                    android:layout_height="132dp"
                    android:layout_width="160dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edtNomeList"
                        style="@style/texto_nome_listagem_pet"
                        android:text="FuscÃ£o"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edtRacaList"
                        style="@style/texto_editor_listagem"
                        android:text="Vira - Lata"
                        android:layout_marginTop="4dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/imvSexoList"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:background="@drawable/sexo_macho"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tvIdDono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"/>
                </LinearLayout>

            </LinearLayout>
            //</LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>