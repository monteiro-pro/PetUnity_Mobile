<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Msm_Titulo">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorAzulclaro</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Msm_texto">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_opcao">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorRoxoEscuro</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_result_opcao">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/colorAzulclaro</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_layout">
        <item name="android:src">@drawable/texto_layout</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_editor">
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLength">22</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_editor_fazer_ligacao">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_editor_perfil">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_editor_listagem">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_nome_perfil_pet">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorNomePet</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texto_nome_listagem_pet">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorNomePet</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texto_opcao_perfil">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorRoxoEscuro</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="texto_doador_perfil">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_opcao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="botao_padrao">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:color">@color/colorVerdeClaro</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_style_defout</item>
    </style>

    <style name="especie_layout_botao">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="imagem_perfil">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@drawable/borda_imagem_perfil</item>
    </style>

</resources>
